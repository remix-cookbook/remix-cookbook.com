{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "yarn build:css && yarn build:worker && remix build",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn routes:generate\" \"yarn dev:worker\" \"yarn dev:css\" \"netlify dev\"",
    "dev:css": "postcss ./styles/ --base --dir ./app/styles -w",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
    "routes:generate": "yarn routes-gen -d @routes-gen/remix",
    "build:css": "postcss ./styles/ --base --dir ./app/styles",
    "postinstall": "remix setup node",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "sitemap": "node ./lib/sitemap.js",
    "feed": "node ./lib/feed.js",
    "lint": "eslint app/**/**",
    "lint:fix": "eslint --fix",
    "test": "cypress open",
    "test:run": "cypress run",
    "db:sync": "npx prisma db push",
    "prisma:generate": "npx prisma generate",
    "ci": "start-server-and-test dev http://localhost:3000 test:run"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@netlify/functions": "^0.11.0",
    "@prisma/client": "^3.9.1",
    "@remix-run/netlify": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/groq-store": "^0.2.3",
    "@sanity/image-url": "^1.0.1",
    "@tailwindcss/typography": "^0.5.1",
    "autoprefixer": "^10.4.1",
    "axios": "^0.25.0",
    "classnames": "^2.3.1",
    "cypress": "^9.4.1",
    "dotenv": "^15.0.0",
    "feed": "^4.2.2",
    "lodash": "^4.17.21",
    "minutes-to-read": "^1.1.0",
    "picosanity": "^3.0.3",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "prisma": "^3.9.1",
    "prismjs": "^1.25.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-refractor": "^2.1.5",
    "refractor": "^4.3.0",
    "remix": "^1.1.3",
    "remix-auth": "^3.2.1",
    "remix-auth-github": "^1.0.0",
    "remix-utils": "^2.4.0",
    "routes-gen": "^0.3.0",
    "tailwindcss": "^3.0.18",
    "viewport-js": "^1.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@routes-gen/remix": "^0.2.10",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-kentcdodds": "^20.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tailwindcss": "^3.4.3",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "sitemap-generator": "^8.5.1",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
